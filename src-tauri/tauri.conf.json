{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "flowen-desktop-sync",
  "version": "0.1.0",
  "identifier": "com.danieloisson.flowen-desktop-sync",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Flowen Sync",
        "width": 800,
        "height": 800
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "core:window:default",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}